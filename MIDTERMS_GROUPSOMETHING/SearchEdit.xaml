        <TextBox HorizontalAlignment="Left" Margin="58,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="26"/>
        <TextBlock x:Name="Tb1_Copy" HorizontalAlignment="Left" Margin="58,388,0,0" TextWrapping="Wrap" Text="Sort By:" VerticalAlignment="Top" Height="26" Width="55" Visibility="Visible" RenderTransformOrigin="0.571,0.828"/>
        <ComboBox x:Name="ComboType1_Copy" HorizontalAlignment="Left" Margin="109,385,0,0" VerticalAlignment="Top" Width="129" Visibility="Visible"/>

