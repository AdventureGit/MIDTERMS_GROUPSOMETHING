        <TextBox x:Name="Tbx0" HorizontalAlignment="Left" Margin="384,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="129" Height="28" Visibility="Hidden"/>
        <TextBlock x:Name="Tb1" HorizontalAlignment="Left" Margin="302,227,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Height="26" Width="55" Visibility="Hidden"/>
        <TextBlock x:Name="Tb2" HorizontalAlignment="Left" Margin="302,286,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Height="25" Width="45" Visibility="Hidden"/>
        <TextBox x:Name="Tbx1" HorizontalAlignment="Left" Margin="384,282,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="129" Height="29" Visibility="Hidden"/>
        <TextBlock x:Name="Tb3" HorizontalAlignment="Left" Margin="537,171,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Height="25" Width="55" Visibility="Hidden"/>
        <TextBox x:Name="Tbx2" HorizontalAlignment="Left" Margin="619,168,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="129" Height="28" Visibility="Hidden"/>
        <TextBlock x:Name="Tb4" HorizontalAlignment="Left" Margin="537,229,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Height="25" Width="55" Visibility="Hidden"/>
        <ComboBox x:Name="ComboType1" HorizontalAlignment="Left" Margin="384,229,0,0" VerticalAlignment="Top" Width="129" Visibility="Hidden"/>
        <ComboBox x:Name="ComboType2" HorizontalAlignment="Left" Margin="619,227,0,0" VerticalAlignment="Top" Width="129" Visibility="Hidden"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" FontWeight="Bold" FontSize="24" Height="40"><Run Text="SEARCH/EDIT ITEM"/><LineBreak/><Run/></TextBlock>
